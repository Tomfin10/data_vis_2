{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 300,
    "data": {"url": "https://raw.githubusercontent.com/Tomfin10/data_vis_2/main/school-shootings-data.csv"},

    "params": [
        {
            "name": "year_above",
            "value": 2008,
            "bind": {
              "input": "range",
              "min": 1999,
              "max": 2022,
              "step": 1,
              "name": "From Year: "
            }
        }],
    "transform": [
        {
            "calculate": "year(datum.year)",
            "as": "Year"
        },
        {"filter": "datum.Year >= year_above"}

    ],
    "layer": [
        {
            "title":{
                "text": "Total People Killed each year in School Shootings",
                "fontSize": 30,
                "font": "Aharoni"
            },
            "mark": {
                "type": "bar",
                "color": "slategrey"
            },
            "encoding": {
            "x": {
                "timeUnit": "year",
                "field": "year",
                "type": "ordinal",
                "axis": {"title": "Year", "titleFontSize": 15}
            },
            "y": {
                "aggregate": "sum",
                "field": "killed",
                "type": "quantitative",
                "axis": {"title": "Killed", "titleFontSize": 15},
                "scale": {"domain": [0,35]}
            },
            
            "tooltip": [
                {"field": "year", "title": "Year", "timeUnit": "year"},
                {"field": "killed", "title": "Killed", "aggregate": "sum"}
                ]
            }
        },
        {
            "transform": [
                {
                    "aggregate": [{
                     "op": "sum",
                     "field": "killed",
                     "as": "sum_killed"
                    }],
                    "groupby": ["year"]
                  }
            ],
            "layer":[
                {
                    "mark": "rule",
                    "encoding": {
                        "y": {
                            "aggregate": "mean",
                            "field": "sum_killed",
                            "type": "quantitative"
                        },
                        "color": {"value": "firebrick"},
                        "size": {"value": 3}
                    }
                    
                },
                {
                    "mark": {
                        "type": "text",
                        "align": "center",
                        "dy": -10,
                        "text": "Average Deaths",
                        "fontSize": 15,
                        "color": "firebrick",
                        "fontWeight": "bold"
                    },
                    "encoding": {
                        "y": {
                            "aggregate": "mean",
                            "field": "sum_killed",
                            "type": "quantitative"
                        }
                    }
                }
            ]
        },
        {
            "transform": [
                {
                    "aggregate": [{
                     "op": "sum",
                     "field": "killed",
                     "as": "sum_killed2"
                    }],
                    "groupby": ["year"]
                },
                {
                    "filter": "datum.sum_killed2 > 20"
                }
            ],
            "mark": {
                "type": "text",
                "dy": 15,
                "fontSize": 18,
                "fontWeight": "bold"
            },
            "encoding": {
                "text": {"field": "sum_killed2", "type": "quantitative"},
                "color": {"value": "white"},
                "x": {
                    "timeUnit": "year",
                    "field": "year",
                    "type": "ordinal"
                },
                "y": {
                    "field": "sum_killed2",
                    "type": "quantitative"
                }
            }
          }
    ]
  }